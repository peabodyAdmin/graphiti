# =============================================================================
# CANONICAL CONFIGURATION - Single Source of Truth
# =============================================================================
# This file defines ALL configuration values for the Graphiti stack.
# Docker Compose translates these to service-specific names as needed.
# =============================================================================

# === Neo4j Database ===
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=neo4j

# === Neo4j Container Ports (host:container) ===
NEO4J_HTTP_PORT=7479
NEO4J_BOLT_PORT=7692

# === Graphiti MCP Server ===
GRAPHITI_MCP_HOST=0.0.0.0
GRAPHITI_MCP_PORT=8000
GRAPHITI_MCP_EXTERNAL_PORT=8010
GRAPHITI_GROUP_ID=rob
SEMAPHORE_LIMIT=25
GRAPHITI_TELEMETRY_ENABLED=false

# === Neo4j Cypher MCP Server ===
NEO4J_CYPHER_MCP_HOST=0.0.0.0
NEO4J_CYPHER_MCP_PORT=8000
NEO4J_CYPHER_MCP_EXTERNAL_PORT=8011

# === LLM Provider (OpenAI) ===
OPENAI_API_KEY=sk-your-openai-key-here
MODEL_NAME=gpt-4.1-mini
